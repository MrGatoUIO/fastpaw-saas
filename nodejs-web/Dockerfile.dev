FROM node:18-alpine

WORKDIR /app

# Instalar nodemon globalmente para desarrollo
RUN npm install -g nodemon

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el c√≥digo fuente
COPY . .

# Exponer puerto 3001
EXPOSE 3001

# Comando para desarrollo con nodemon
CMD ["npm", "run", "dev"]